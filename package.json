{
  "name": "newbuild",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "license": "ISC",
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "eslint": "eslint source/js/**/*.js",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint && npm run eslint",
    "build": "gulp build",
    "start": "gulp build && gulp server"
  },
  "browserslist": [
    "last 2 versions",
    "not ie > 0",
    "not ie_mob > 0",
    "not dead"
  ],
  "eslintIgnore": [
    "vendor/",
    "main.js",
    "vendor.js"
  ],
  "editorconfig-cli": [
    "src/**/*.html",
    "src/js/modules/**/*.js",
    "src/sass/*.scss",
    "src/sass/global/**/*.scss",
    "src/sass/blocks/**/*.scss"
  ],
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^9.7.4",
    "browser-sync": "^2.26.7",
    "del": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-htmlacademy": "^0.5.2",
    "gulp": "^4.0.2",
    "gulp-imagemin": "^7.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-pug": "^4.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-rigger": "^0.5.8",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-svgstore": "^7.0.1",
